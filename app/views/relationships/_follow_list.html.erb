<% if users.exists? %>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <% users.each do |user| %>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
